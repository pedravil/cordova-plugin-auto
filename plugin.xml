<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0" id="com.bool.plugins.auto" version="0.1.0">

  <name>auto</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/auto.js" target="js/auto.js"/>

  <js-module src="www/auto.js" name="auto">
         <clobbers target="cordova.plugins.Auto" />
  </js-module>

  <platform name="android">
    
    <config-file target="AndroidManifest.xml" parent="/manifest/application">
      
        <uses-feature android:name="android.hardware.type.automotive" android:required="true" />
      
        <meta-data android:name="com.google.android.gms.car.application" android:resource="@xml/automotive_app_desc"/>
      
        <service android:name=".AndroidAutoMessagingService" android:exported="true" />

        <receiver
            android:name=".AndroidAutoMessagingReadReceiver" android:exported="true">
            <intent-filter>
                <action android:name="com.androidauto.messaging.ACTION_MESSAGE_READ" />
            </intent-filter>
        </receiver>
      
        <receiver
            android:name=".AndroidAutoMessagingReplyReceiver" android:exported="true">
            <intent-filter>
                <action android:name="com.androidauto.messaging.ACTION_MESSAGE_REPLY" />
            </intent-filter>
        </receiver>
      
    </config-file>
    
    <framework custom="true" src="src/android/auto.gradle" type="gradleReference" />
    
    <resource-file src="src/android/res/xml/automotive_app_desc.xml" target="res/xml/automotive_app_desc.xml" />
    
    <source-file src="src/android/AndroidAutoMessagingService.java" target-dir="src/android"/>
    <source-file src="src/android/AndroidAutoMessagingReadReceiver.java" target-dir="src/android"/>
    <source-file src="src/android/AndroidAutoMessagingReplyReceiver.java" target-dir="src/android"/>
    
  </platform>

</plugin>
